done

function mancomplete {
	ITEMS=$(man -W | sed -e 's/:/ /g')
	for i in $ITEMS; do
		HITS=$i/*/$2*
		for j in $HITS; do
			NAME=$(basename $j)	
			echo $NAME
		done
	done
}


