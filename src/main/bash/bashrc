shopt -s cdspell    # Fix minor cd typos automatically

# ------------- Prompt setup, with SCM status
parse_git_branch() {
	local DIRTY STATUS PROMPT
	STATUS=$(git status 2>/dev/null)
	DIRTY=''
	PROMPT=''
	[ $? -eq 128 ] && return
	[[ "$STATUS" == *'working directory clean'* ]] || DIRTY=' *'
	[[ "$STATUS" == *'Not a git repository'* ]] || PROMPT='Y'
	if [ -z "$STATUS" ]; then
	  PROMPT=''	
	fi	
	if [[ "$PROMPT" == 'Y' ]]; then
	echo "($(git branch 2>/dev/null | sed -e '/^[^*]/d' -e 's/* //')$DIRTY)"
	fi
}

if [ -e ~/.hostlabel ]; then
	# If there is a ~/.hostlabel file, use its content in the prompt
	PS1="\u@$(cat ~/.hostlabel):\W\$(parse_git_branch) \\$ "
else
	# printing the xterm set-window-title escape sequence here confuses
	# cursor positioning so we do it in PROMPT_COMMAND below instead
	#PS1='\e]0;\W\a\u@\h:\W$(parse_git_branch) \$ '
	PS1='\u@\h:\W$(parse_git_branch) \$ '
fi

# ------------- readline tweaks
